{
    "editor.fontLigatures": true, // 是否启用字体连字
    "editor.fontSize": 14, //设置字体大小
    "editor.fontWeight": "normal", //设置字体粗细
    "editor.tabSize": 2,
    "editor.fontFamily": "Consolas,'微软雅黑', 'Courier New', monospace",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/__init__.py": true,
        "**/.pytest_cache": true,
    },
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
